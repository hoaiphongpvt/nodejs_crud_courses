<div class='mt-2'>
    <h2>CREATE COURSE</h2>
    <form class='mt-2 col-6' method='POST' action='/courses/store'>
        <div class='form-group'>
            <label for='name'>Course name</label>
            <input class='form-control' id='name' name='name' />
        </div>
        <div class='form-group mt-2'>
            <label for='desc'>Description</label>
            <input class='form-control' name='desc' id='desc' />
        </div>
        <div class='form-group mt-2'>
            <label for='desc'>Thumbnail</label>
            <input name='thumbnail' class='form-control' id='thumb' />
        </div>
        <button type='submit' class='btn btn-primary mt-2'>ADD COURSE</button>
    </form>
</div>