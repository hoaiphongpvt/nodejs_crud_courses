<div class='mt-2'>
    {{#with course}}
        <h2>EDIT COURSE</h2>
        <div class='row'>
            <form
                class='mt-2 col-6'
                method='POST'
                action='/courses/update/{{this._id}}?_method=PUT'
            >
                <input type='hidden' value='{{this._id}}' name='_id' />
                <div class='form-group'>
                    <label for='name'>Course name</label>
                    <input
                        class='form-control'
                        id='name'
                        name='name'
                        value='{{this.name}}'
                    />
                </div>
                <div class='form-group mt-2'>
                    <label for='desc'>Description</label>
                    <textarea
                        class='form-control'
                        name='desc'
                        id='desc'
                    >{{this.desc}}</textarea>
                </div>
                <div class='form-group mt-2'>
                    <label for='desc'>Thumbnail</label>
                    <input
                        name='thumbnail'
                        class='form-control'
                        id='thumb'
                        value='{{this.thumbnail}}'
                    />
                </div>
                <div class='text-center mt-2'>
                    <button
                        type='submit'
                        class='btn btn-primary mt-2 col-3'
                    >SAVE</button>
                </div>
            </form>
            <div class='col-6 text-center'>
                <img src='{{this.thumbnail}}' alt='' />
            </div>
        </div>
    {{/with}}
</div>